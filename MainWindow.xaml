<Window x:Class="BluetoothClipboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:BluetoothClipboard"
        mc:Ignorable="d"
        Title="蓝牙剪贴板" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="DevicesComboBox" 
                      Grid.Column="0"
                      Margin="0,0,16,0"
                      md:HintAssist.Hint="选择设备"
                      DisplayMemberPath="Name"/>

            <Button x:Name="RefreshButton" 
                    Grid.Column="1"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Content="刷新设备" 
                    Margin="0,0,16,0"
                    Click="RefreshButton_Click"/>

            <Button x:Name="ServerButton"
                    Grid.Column="2"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Content="启动服务器"
                    Margin="0,0,16,0"
                    Click="ServerButton_Click"/>

            <Button x:Name="ConnectButton"
                    Grid.Column="3"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Content="连接"
                    Margin="0,0,16,0"
                    Click="ConnectButton_Click"/>
            
            <Button x:Name="DisconnectButton"
                    Grid.Column="4"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Content="断开连接"
                    Click="DisconnectButton_Click"/>
        </Grid>

        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignBackground}"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,16">
            <ScrollViewer x:Name="LogScrollViewer">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Background="Transparent"
                         BorderThickness="0"/>
            </ScrollViewer>
        </Border>

        <StatusBar Grid.Row="2" Background="Transparent">
            <TextBlock x:Name="StatusTextBlock" Text="就绪"/>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
            <TextBlock x:Name="ConnectionTextBlock" Text="未连接"/>
        </StatusBar>
    </Grid>
</Window>